<Page x:Class="Arduino.WPF.View.ArduinoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Arduino.WPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArduinoView">

    <Grid>
        <Label Content="Temperature : " HorizontalAlignment="Left" Margin="117,100,0,0" VerticalAlignment="Top" Width="83"/>
        <Label Content="{Binding Temperature}" HorizontalAlignment="Left" Margin="175,100,0,0" VerticalAlignment="Top" Width="83"/>
        <Button Content="Start Communication" Command="{Binding StartCommand}" HorizontalAlignment="Left" Margin="117,171,0,0" VerticalAlignment="Top"/>
        <Button Content="Stop Communication" Command="{Binding StopCommand}" HorizontalAlignment="Left" Margin="259,171,0,0" VerticalAlignment="Top"/>
        <Label Content="Status : " HorizontalAlignment="Left" Margin="396,171,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Status}" HorizontalAlignment="Left" Margin="448,171,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
